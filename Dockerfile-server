# Stage 1: Build Python dependencies
FROM python:3.10-slim AS builder

WORKDIR /app

# Configure pip to use domestic mirror source (Alibaba Cloud) and set timeout and retry
RUN pip config set global.index-url https://mirrors.aliyun.com/pypi/simple/ && \
    pip config set global.trusted-host mirrors.aliyun.com && \
    pip config set global.timeout 120 && \
    pip config set install.retries 5

COPY main/xiaozhi-server/requirements.txt .

# Install Python dependencies, using parallel download
RUN pip install --no-cache-dir --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt --default-timeout=120 --retries 5

# Stage 2: Production image
FROM python:3.10-slim

WORKDIR /opt/xiaozhi-esp32-server

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends libopus0 ffmpeg && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Copy Python packages and frontend build artifacts from build stage
COPY --from=builder /usr/local/lib/python3.10/site-packages /usr/local/lib/python3.10/site-packages
COPY --from=builder /usr/local/bin/mcp-proxy /usr/local/bin/mcp-proxy

# Copy application code
COPY main/xiaozhi-server .

# Start application
CMD ["python", "app.py"]
